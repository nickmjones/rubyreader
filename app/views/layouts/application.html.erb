<!DOCTYPE html>
<html>
  <head>
    <title>Readinglog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <meta name='viewport' content='viewport-fit=cover, width=device-width, height=device-height, initial-scale=1.0, user-scalable=no'>
    <%= render 'shared/webcapable' %>
  </head>

  <body ontouchstart="">
    <%= render 'shared/navigation' %>

    <div class="view">
      <div class="content">
        <%= yield %>
      </div>
    </div>

    <%= render 'shared/overlay' %>
  </body>
</html>
